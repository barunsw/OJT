<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.barunsw.ojt.cjs.day08.AddressBookInterface">

	<select id="selectAddressList"
		parameterType="com.barunsw.ojt.cjs.day08.AddressVo"
  		resultType="com.barunsw.ojt.cjs.day08.AddressVo"
  		>
		SELECT * 
		FROM 
			ADDRESSBOOK
		WHERE
			1 = 1
			<if test="name != null">
			AND NAME = #{name}
			</if>
	</select>
	
	<insert id ="insertAddress" 
			parameterType="com.barunsw.ojt.cjs.day08.AddressVo"
			>	  		
	  		
		INSERT
		INTO 
			ADDRESSBOOK
			(NAME, AGE, GENDER, ADDRESS)
			VALUES
			(#{name}, #{age}, #{gender}, #{address})
	</insert>
	
	
	<update id="updateAddress" 
			parameterType="com.barunsw.ojt.cjs.day08.AddressVo"
	  		>
	  		UPDATE ADDRESSBOOK SET 
	  			NAME = #{name},
	  			AGE = #{age},
	  			GENDER= #{gender},
	  			ADDRESS = #{address}
	  			WHERE NAME = #{name}
	
	</update>
	
	<delete id="deleteAddress" 	
			parameterType="com.barunsw.ojt.cjs.day08.AddressVo"
			>
			DELETE 
				FROM
				ADDRESSBOOK
				WHERE
				Name =#{name}
	
	</delete>
</mapper>